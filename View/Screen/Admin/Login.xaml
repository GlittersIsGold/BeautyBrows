<Page x:Class="BeautyBrows.View.Screen.Admin.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeautyBrows.View.Screen.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <Grid>
            <StackPanel
                Width="400"
                Height="100"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                >
                <TextBlock             
                    Text="Введите пароль"
                    />
                <PasswordBox Name="PasswordBoxAdministrationAuth"/>
                <StackPanel 
                    HorizontalAlignment="Center"
                    Width="200"
                    >
                    <Button 
                        Name="ButtonAuthenticateAdmin"
                        Content="Войти"
                        Style="{StaticResource Authenticate}" Click="ButtonAuthenticateAdmin_Click"
                        />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
