<Page x:Class="BeautyBrows.View.Screen.User.Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeautyBrows.View.Screen.User"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Welcome">

    <Grid>
        <StackPanel 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >
            <Button 
                Name="ButtonContinueAsUser"
                Click="ButtonContinueAsUser_Click" 
                Style="{StaticResource BtnDefault}"
                Content="Продолжить"
                />
            <Button 
                Name="ButtonContinueAsAdmin"
                Click="ButtonContinueAsAdmin_Click"
                Style="{StaticResource ProceedAsAdminButton}"
                Content="Ввести пароль"
                />
        </StackPanel>
    </Grid>
</Page>
